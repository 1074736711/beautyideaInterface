<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="228dp">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

        <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/thumbnail"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal|top"/>
        <RelativeLayout
                android:layout_gravity="bottom"
                android:background="#56000000"
                android:layout_width="match_parent"
                android:layout_height="40dp">
            <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_marginTop="12dp"
                        android:textSize="16dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="#FFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06"
                        android:id="@+id/duration_hour"/>
                <TextView
                        android:layout_marginTop="12dp"
                        android:textSize="16dp"
                        android:layout_toRightOf="@+id/duration_hour"
                        android:textColor="#FFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/duration_fuhao"/>
                <TextView
                        android:layout_marginTop="12dp"
                        android:textSize="16dp"
                        android:layout_toRightOf="@+id/duration_fuhao"
                        android:textColor="#FFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:id="@+id/duration_min"/>
            </RelativeLayout>
            <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/ic_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
            android:background="#FFF"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="黄渤电影混剪《一个用生命搞笑的男人》"
                    android:id="@+id/title"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="70dp"
                    android:layout_height="fill_parent">
                <ImageView
                        android:src="@drawable/ic_eye"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ic_eye"/>

                <TextView
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/ic_eye"
                        android:text="249"
                        android:id="@+id/viewCount"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:background="@drawable/bottom_shadow"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </LinearLayout>

</LinearLayout>